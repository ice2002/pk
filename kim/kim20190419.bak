layer.ready(function()
{
    $('a').on('click', function(){
        var othis = $(this), type = othis.attr('type');
        switch(type){
            case 'ShowItem':
                $.getJSON('/kim/ShowItem.json?v='+new Date, function(json)
                {
                    layer.photos
                    ({
                        photos: json,
                        anim: 5,
                        shade: [0],
                    });
                });
            break;
            
            case 'ShowPic':
                $.getJSON('/kim/Picture.json?v='+new Date, function(json)
                {
                    layer.photos
                    ({
                        photos: json,
                        anim: 0,
                        shade: [0],
                    });
                });
            break;

            case 'tips':
                layer.msg("欢迎光临");
            break;

        };
    });

    //游戏下载
    $('#Down').on('click', function(){
        layer.open({
            type: 2,
            title: '游戏下载',
            area: ['800px', '418px'],
            shade: [0],     //遮罩透明度, 0不显示遮罩, 不显示遮罩要把closeBtn设为0, 否则IE6下出现半边黑底
            //shadeClose: true,
            content: 'Download.html'
        });
    });

    //播放视频
    $('#Video').on('click', function(){
        layer.open({
            type: 2,
            title: '视频欣赏',
            //title: false ,
            //area: ['822px', '675px'],
            //area: ['822px', '635px'],
            area: ['822px', '550px'], //优酷
            shade: [0],
            //shadeClose: true,
            content: ['http://player.youku.com/embed/XMTM4NjU4OTA2MA', 'no']
        });
    });

    //掉落列表
    $('#ItemList').on('click', function(){
        layer.open({
            type: 2,
            title: '怪物掉落列表',
            area: ['800px', '50%'],
            shade: [0],
            //shadeClose: true,
            content: ['ItemList.html']
        });
    });
});

var iIndex = 0;
var aImg = new Array(13);
for(var i = 0; i < aImg.length; i++)
{
    aImg[i] = "./img/bg" + [i] + ".jpg";
}

$.setBackground = function()
{
    iIndex = iIndex >= aImg.length - 1 ? 0 : iIndex += 1;
    document.body.style.backgroundImage="url("+ aImg[iIndex] +")";
}
setInterval("$.setBackground()", 10 * 1000);